generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id        Int       @id @default(autoincrement())
  type      String
  number    String    @unique
  inService Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  closedAt  DateTime?
  guiche    String?
}

model Report {
  id           Int      @id @default(autoincrement())
  date         DateTime
  totalTickets Int
  totalClosed  Int
  totalSP      Int
  totalSG      Int
  totalSE      Int
  // Add other fields for detailed reports
}
